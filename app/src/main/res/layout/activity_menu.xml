<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/desain">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logotok1"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kerusakan Kendaraan"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/textedit_keluhan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Masukan Keluhan Kerusakan dan posisi anda..."/>
    <Button
        android:id="@+id/button_keluhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim Kerusakan"
        android:layout_marginBottom="40dp"
        android:background="#00FF00"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_map"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Lihat Lokasi Bengkel"
            android:background="#00FF00"/>

        <Button
            android:layout_marginLeft="150dp"
            android:id="@+id/button_list"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Lihat List Penyedia"
            android:background="#00FF00"/>

    </RelativeLayout>


</LinearLayout>